	<li><a href='#'>Расход</a></li>
	<li><a href='#'>Остаток</a></li>
	</ul>
</div>


<div class='main_headers'>
	<p><h3>Учет</h3></p>
</div>

<div>
<table>	
	<thead>
		<tr>
		<th>id</th>
		<th>Номер</th>
		<th>Кол-во</th>
		<th>Название</th>
		<th>Назначение</th>
		<th>Дата поступления</th>
		</tr>
	</thead>

	<tbody>
	
	<%@results.each do |item|%>
	        <tr>	
		<td><%=item['id']%></td>
		<td><%=item['id_number']%></td>
		<td><%=item['summa']%></td>
		<td><%=item['name_item']%></td>
		<td><%=item['target']%></td>				
		<td><%=item['datestemp']%></td>
		</tr>
	<%end%>

	</tbody>
</table>
</div>
